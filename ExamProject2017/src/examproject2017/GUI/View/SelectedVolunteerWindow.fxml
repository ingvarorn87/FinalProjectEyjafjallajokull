<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@MainLayout.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="examproject2017.GUI.Controller.SelectedVolunteerWindowController">
   <children>
      <HBox layoutX="4.0" layoutY="221.0" prefHeight="200.0" prefWidth="456.0">
         <children>
            <TableView fx:id="tblSeeHours" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="clmGuild" prefWidth="110.0" text="Guild" />
                <TableColumn fx:id="clmHours" prefWidth="89.0" text="Hours" />
              </columns>
            </TableView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="249.0" spacing="20.0">
               <children>
                  <ComboBox fx:id="CBHours" layoutX="10.0" layoutY="72.0" prefHeight="36.0" prefWidth="220.0" promptText="Select Hours" />
                  <ComboBox fx:id="CBselectGuild" prefHeight="36.0" prefWidth="220.0" promptText="Select Guild" />
                  <Button fx:id="btnRegister" mnemonicParsing="false" prefHeight="44.0" prefWidth="110.0" text="Register" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="222.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" prefHeight="222.0" prefWidth="162.0">
               <children>
                  <ImageView fitHeight="167.0" fitWidth="151.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@SampleImage.jpg" />
                     </image></ImageView>
                  <Label fx:id="lblID" styleClass="label-small" text="ID">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets left="20.0" />
               </opaqueInsets>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="222.0" prefWidth="198.0" spacing="15.0">
               <children>
                  <Label fx:id="lblName" text="Name">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="lblEmail" layoutX="10.0" layoutY="10.0" styleClass="label-small" text="Email" />
                  <Label fx:id="lblAddress" layoutX="10.0" layoutY="52.0" styleClass="label-small" text="Address" />
                  <Label fx:id="lblPhone" layoutX="73.0" layoutY="144.0" styleClass="label-small" text="Phone number" />
               </children>
               <opaqueInsets>
                  <Insets left="20.0" />
               </opaqueInsets>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="222.0" prefWidth="246.0" spacing="20.0">
               <children>
                  <Label alignment="TOP_CENTER" text="Information">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <TextArea fx:id="txtInformationInput" prefHeight="200.0" prefWidth="200.0" promptText="Insert volunteer information here" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets left="20.0" />
         </opaqueInsets>
      </HBox>
      <HBox layoutX="456.0" layoutY="-184.0" prefHeight="44.0" prefWidth="114.0" />
      <Button fx:id="btnCloseSVW" layoutX="444.0" layoutY="354.0" mnemonicParsing="false" onAction="#closeSelectedVolunteerWindow" prefHeight="0.0" prefWidth="112.0" text="Close" />
   </children>
</AnchorPane>
